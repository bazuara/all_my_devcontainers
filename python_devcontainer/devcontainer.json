{
	"name": "Bazuara's Python Development Playground",
	"build": {
		"dockerfile": "Dockerfile"
	},
	"postCreateCommand": "mkdir .vscode && cp .devcontainer/vscode_settings.json .vscode/settings.json",
	"customizations": {
		"vscode": {
			"extensions": [
				"streetsidesoftware.code-spell-checker",
				"2gua.rainbow-brackets",
				"oderwat.indent-rainbow",
				"GitHub.copilot",
				"ms-python.python",
				"charliermarsh.ruff"
			]
		}
	},
	"remoteUser": "vscode"
}